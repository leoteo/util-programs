CC = icc
LD = icc

ifdef debug
CFLAGS = -O0 -debug
else
# I checked that -03 makes no difference
CFLAGS = -O1
endif

CFLAGS += -I ~/apps/boost/boost_1_48_0/ -I ~/local/include

# ipazia has only dynamic libstd++ !
LFLAGS  = -pthread
LFLAGS += -L ~/apps/boost/boost_1_48_0/stage/lib/
LFLAGS += -L ~/local/lib/
LFLAGS += -lboost_program_options -lboost_regex -lfftw3 -lm -lblitz
